<page id="conversa" bg_color="black">
  <agent 
    id="playername" 
    x="640 * 0.2" 
    y="480 * 0.2" 
    text="$name" 
    color="black" 
    bg_color="skyblue"
    on_click="set(idx, $idx + 1)"
    font-size="24" />
  
  <fab-if when="$idx%2 = 0">    
  <agent 
    id="placaplayer"
    x="640 * 0.2"
    y="480 * 0.32"
    bg_color = "grey"
    color="black"
    text="$conversas[$idx]"
    />
  </fab-if>
<fab-if when="$idx%2 = 0">
  <agent 
    id="placaenemy"
    x="640 * 0.2"
    y="480 * 0.8"
    bg_color="red"
    text="$conversas[$idx]"
    />
</fab-if>















  
</page>