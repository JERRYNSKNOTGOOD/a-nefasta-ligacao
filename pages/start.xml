<page id="start" bg_color="black" bg_music="">
  <agent 
    id="nameviewer"
    x = "0"
    y= "480 * 0.1"
    text="Teu nome atual: $name"
    
    />
  <agent
    id="chararacter1"
    text="$alfabeto[$char0]"
    color="white"
    x="640 * 0.3"
    y="center"
    font-size="70"
  />
  <agent 
    id="character2"
    text="$alfabeto[$char1]"
    x= "640 * 0.4"
    y="center"
    font-size= "70"
    />
  <agent
    id="character3"
    text="$alfabeto[$char2]"
    x="640 * 0.5"
    y="center"
    font-size="70"
    />
  <agent 
    id="character4"
    text="$alfabeto[$char3]"
    x="640 * 0.6"
    y="center"
    font-size="70"
    />
  <agent 
    id="character5"
    text="$alfabeto[$char4]"
    x= "640 * 0.7"
    y="center"
    font-size="70"
    />
  <agent 
    id="play"
    x="640"
    y="480"
    text="PLAY"
    />
  <agent
    id="Salvarnomebtn"
    text="Salvar nome"
    y="480"
    x=""
    on_click="set(name, $alfabeto[$char0] + $alfabeto[$char1] + $alfabeto[$char2] + $alfabeto[$char3] + $alfabeto[$char4])"
  />
  <agent
    id="sum0"
    x="640 * 0.3"
    y="480 * 0.4"
    width="60"
    on_click = "set(char0, $char0 + 1)"
    text="+"
    />

  <agent 
    id="sub0"
    width="60"
    x="640 * 0.3"
    y="480 * 0.76"
    text="-"
    on_click = "set(char0, $char0 - 1)"
    />

  <agent 
    id="sum1"
    text="+"
    width="60"
    x="640 * 0.4"
    y="480 * 0.4"
    on_click = "set(char1, $char1 + 1)"
    />
  <agent 
    id="sum2"
    text="+"
    width="60"
    x="640 * 0.5"
    y="480 * 0.4"
    on_click = "set(char2, $char2 + 1); setIf(${condicao}, ${nome}, ${valor})"
    />













  


  
</page>