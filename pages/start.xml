<page id="start" bg_color="black" bg_music="">
  <agent 
    id="nameviewer"
    x = "0"
    y= "480 * 0.1"
    text="Teu nome atual: $name"
    
    />
  <agent
    id="chararacter1"
    text="$alfabeto[$char0]$alfabeto[$char0 + 1]. $name"
    color="white"
    x="center"
    y="center"
    font-size="70"
  />

  <agent
    id="Salvarnomebtn"
    text="Salvar nome"
    animation="glitch"
    y="480"
    x=""
    on_click="set(char0, $char0 + 1); set(name, $alfabeto[$char0] + $alfabeto[$char0+1])"
  />
</page>